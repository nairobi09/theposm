<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_unit"
    android:textColor="#000000">

    <LinearLayout
        android:id="@+id/order_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="2dp"
        android:padding="1dp">

        <ImageView
            android:id="@+id/flow_step"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_step_allim"/>

        <TextView
            android:id="@+id/allim_status_name"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="주문"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/order_no"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="주문#"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/order_time"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="주문시간"
            android:textAppearance="?android:attr/textAppearanceLarge" />


        <TextView
            android:id="@+id/order_cnt"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="2"
            android:textAlignment="textEnd"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/allim_type"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_allim_talk"/>

        <TextView
            android:id="@+id/order_memo"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="4089"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/is_cancel"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="취소됨"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/allim_type_code"
            android:layout_width="0dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/allim_status_code"
            android:layout_width="0dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/the_no"
            android:layout_width="0dp"
            android:layout_height="30dp" />





    </LinearLayout>
</LinearLayout>